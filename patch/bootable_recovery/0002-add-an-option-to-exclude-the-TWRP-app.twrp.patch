diff --git a/prebuilt/Android.mk b/prebuilt/Android.mk
index b81c32b..37afa43 100755
--- a/prebuilt/Android.mk
+++ b/prebuilt/Android.mk
@@ -687,6 +687,7 @@
    include $(BUILD_PREBUILT)
 endif
 
+ifneq ($(TW_EXCLUDE_TWRPAPP),true)
 #TWRP App "placeholder"
